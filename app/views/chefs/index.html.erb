<%= render 'shared/page_title', title: 'All Stores' %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to "Products", recipes_path %>
  </li>
  <li  class='active'>
    <%= link_to "Stores", chefs_path %>
  </li>
</ul>


<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
    
  </div>
</div>

<% @chefs.each do |chef| %>
  
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= link_to gravatar_for(chef, size: 200),chef_path(chef) %>
      <p>
        <h5>Store name: <%= chef.chefname %></h5>
      </p>
      
    </div>
  </div>
<% end %>